@model IEnumerable<Product>

@{
    ViewData["Title"] = "Productos";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create">Crear Nuevo Producto</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                Name
            </th>
           
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
           
            <td>
                @item.Price.ToString("C2")
            </td>
            <td>
                @item.Category.Name
            </td>
            <td>
                <img src="~/media/Productos/@item.Image" width="100" alt="" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"> Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id"> Detalles</a> |
                <a class="confirmDeletion" asp-action="Delete" asp-route-id="@item.Id"> Eliminar</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
<div class="d-flex w-100 justify-content-center">
    <pagination page-count="@ViewBag.TotalPages" page-target="/admin/productos" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></pagination>

</div>
